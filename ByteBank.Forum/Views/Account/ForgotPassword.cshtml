@model ByteBank.Forum.ViewModels.AccountForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Esqueceu sua senha?</h2>
<p>Preencha o campo de e-mail com seu endereço de e-mail cadastrado no fórum e enviaremos a ele as instruções para você recuperar sua senha</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.EditorForModel()

    <input type="submit" value="Enviar" />
}
